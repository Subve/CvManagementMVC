@model CvManagementMVC.Application.ViewModels.Candidate.ListCandidateForListVm

@{
    ViewData["Title"] = "Candidates list";
}

<h1>Index</h1>

<p>
    <a asp-action="AddCandidate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidates) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.LastName)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditCandidate", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "ViewCandidate", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
                    @Html.ActionLink("Address","Details", "Address", new { candidateId=item.Id }) |
                    @Html.ActionLink("Cv","CreateCv","Cv",new {candidateId=item.Id})
                    
        </tr>
}
    </tbody>
</table>
